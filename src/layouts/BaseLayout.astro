---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
}

const {
  title = "Invisible Sloth",
  description = "Invisible Sloth creates imaginative indie games and apps.",
  canonicalUrl,
} = Astro.props as Props;

// Build canonical URL: use prop if provided, otherwise construct from Astro.url
const canonical = (canonicalUrl || new URL(Astro.url.pathname, Astro.site)).toString();
const socialCardUrl = new URL("/social-card.png", Astro.site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="robots" content="noai, noimageai" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" content="#151818" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#f8faf6" media="(prefers-color-scheme: light)" />

    <link rel="canonical" href={canonical} />
    <link rel="license" href="/LICENSE" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={socialCardUrl} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialCardUrl} />

    <!-- Google Fonts - Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Load Sigmar (display font) and Work Sans (body font) -->
    <link
      href="https://fonts.googleapis.com/css2?family=Sigmar&family=Work+Sans:ital,wght@0,400;0,500;0,600;1,400;1,600&display=swap"
      rel="stylesheet"
    />

    <script is:inline>
      {`
        (() => {
          const polyfillRemove = (Ctor) => {
            if (typeof Ctor !== 'undefined' && Ctor.prototype && !Ctor.prototype.remove) {
              Ctor.prototype.remove = function () {
                if (this.parentNode) {
                  this.parentNode.removeChild(this);
                }
              };
            }
          };
          polyfillRemove(DocumentFragment);
          polyfillRemove(DocumentType);
        })();
      `}
    </script>

    <title>{title}</title>
  </head>
  <body class="page">
    <slot />

    <script>
      import { initLogoHoverTilt } from "../scripts/logoHoverTilt";

      const isDev = import.meta.env.DEV;

      try {
        initLogoHoverTilt(document);
      } catch (error) {
        if (isDev) {
          console.warn("Logo hover tilt initialization failed.", error);
        }
      }
    </script>
  </body>
</html>
